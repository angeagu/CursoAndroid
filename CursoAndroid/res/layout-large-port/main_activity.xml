<?xml version="1.0" encoding="utf-8"?>

<!-- INTERFAZ PARA LA PANTALLA GRANDE EN HORIZONTAL -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 
    <fragment class="org.android.cursoandroid.fragments.MenuFragment"
        android:id="@+id/MenuFragment"
        android:layout_weight="70"
        android:layout_width="0px"
        android:layout_height="match_parent" />
 
    <fragment class="org.android.cursoandroid.fragments.ExplanationFragment"
        android:id="@+id/ExplanationFragment"
        android:layout_weight="30"
        android:layout_width="0px"
        android:layout_height="match_parent" />
 
</LinearLayout>